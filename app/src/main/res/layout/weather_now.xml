<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">


    <ImageView
        android:id="@+id/weather_now_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/weather_qin"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <TextView
            android:text="20"
            android:id="@+id/weather_now_temp"
            android:textSize="45sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="℃"
            android:textSize="20sp"
            android:layout_toRightOf="@id/weather_now_temp"
            android:paddingLeft="3dp"
            android:id="@+id/weather_now_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/weather_now_stat"
            android:text="晴"
            android:textSize="20sp"
            android:layout_toRightOf="@id/weather_now_temp"
            android:paddingLeft="3dp"
            android:layout_below="@id/weather_now_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <TextView
        android:text="南风 3级"
        android:id="@+id/weather_now_wind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</LinearLayout>