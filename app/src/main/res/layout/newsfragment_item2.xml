<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/activity_vertical_margin">
        <TextView
            android:id="@+id/news_title"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="新闻标题"/>
        <TextView
            android:id="@+id/news_desc"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/news_title"
            android:layout_alignParentLeft="true"
            android:text="新闻简要描述"/>

        <LinearLayout

        android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/news_desc"
            android:id="@+id/news_imgs"

            >
            <ImageView
                style="@style/imgshow"
                android:id="@+id/news_img1"
                android:layout_weight="1"
                />
            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="#ffffff"
               />
            <ImageView
                style="@style/imgshow"
                android:id="@+id/news_img2"
                android:layout_weight="1"
               />
            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="#ffffff"
                />
            <ImageView
                style="@style/imgshow"
                android:id="@+id/news_img3"
                android:layout_weight="1"
                />
        </LinearLayout>


        <TextView
            android:id="@+id/news_souce"
            android:layout_below="@id/news_imgs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新闻网"/>

        <TextView
            android:id="@+id/news_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-1-1 18:00"
            android:layout_below="@+id/news_imgs"
            android:layout_toRightOf="@+id/news_souce"
            android:layout_toEndOf="@+id/news_souce"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" />




    </RelativeLayout>





</android.support.v7.widget.CardView>