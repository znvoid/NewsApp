<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/activity_vertical_margin">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/nwesfragm_item_linearlaout">


                        <TextView
                            android:id="@+id/news_title"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="20"
                            android:text="新闻标题"/>

                        <ImageView
                            style="@style/imgshow"
                            android:id="@+id/news_img"
                            android:layout_gravity="right|top"
                            android:visibility="gone"
                           />

                </LinearLayout>

                <TextView
                    android:id="@+id/news_desc"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/nwesfragm_item_linearlaout"
                    android:layout_alignParentLeft="true"
                    android:text="新闻简要描述"/>
                <TextView
                    android:id="@+id/news_souce"
                    android:layout_below="@id/news_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新闻网"/>

                <TextView
                    android:id="@+id/news_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017-1-1 18:00"
                    android:layout_below="@+id/news_desc"
                    android:layout_toRightOf="@+id/news_souce"
                    android:layout_toEndOf="@+id/news_souce"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp" />




        </RelativeLayout>





</android.support.v7.widget.CardView>